                                <img src="{!$Resource.DefaultImage}"/>                                
                            </aura:set>
                        </aura:if>
                    </div>
                    <div class="slds-col slds-size_6-of-12 slds-p-top_large">
                        <ui:outputText value="{!v.mapKey.accName}" />
                    </div>
                    <div class="slds-col slds-size_3-of-12 slds-text-align--right remove_btn">
                        
