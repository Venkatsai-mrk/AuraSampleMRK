<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Bed_Out_Of_Order_Alert</fullName>
        <ccEmails>neeta.kumari@mirketa.com</ccEmails>
        <description>Bed Out Of Order Alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>anusha_elixirintegrated@mirketa.com</recipient>
            <type>user</type>
        </recipients>
        
        <senderType>CurrentUser</senderType>
        <template>Census/Bed_Out_Of_Order</template>
    </alerts>
    <fieldUpdates>
        <fullName>Record_Type</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Bed_Detail_Record_type</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Record Type</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Remove_next_release_date</fullName>
        <field>Next_Release_Date__c</field>
        <name>Remove next release date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Null</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Release_Date</fullName>
        <field>Release_Date__c</field>
        <formula>Next_Release_Date__c</formula>
        <name>Update Release Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
